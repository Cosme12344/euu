#include <stdio.h>

int main() {
    int soma, subtração, multiplicação, n1, n2;
    int operação;

    printf("Operações disponíveis:\n");
    printf(" 1-Soma\n");
    printf(" 2-Subtração\n");
    printf(" 3-Multiplicação\n");
    printf("Qual operação você deseja fazer? ");
    scanf("%d", &operação);

    printf("Digite o primeiro número: ");
    scanf("%d", &n1);
    printf("Digite o segundo número: ");
    scanf("%d", &n2);

    if (operação == 1) {
        soma = n1 + n2;
        printf("Resultado da soma: %d\n", soma);
    } else if (operação == 2) {
        subtração = n1 - n2;
        printf("Resultado da subtração: %d\n", subtração);
    } else if (operação == 3) {
        multiplicação = n1 * n2;
        printf("Resultado da multiplicação: %d\n", multiplicação);
    } else {
        printf("Opção inválida!\n");
    }

    return 0;
}
